<odoo>
    <!-- Custom Dashboard View -->
    <record id="view_warehouse_dashboard" model="ir.ui.view">
        <field name="name">warehouse.dashboard.form</field>
        <field name="model">warehouse.dashboard</field>
        <field name="arch" type="xml">
            <form string="Warehouse Dashboard">
                <sheet>
                    <h1>Warehouse Manager Dashboard</h1>
                    <group>
                        <!-- Stat box for Total Orders -->
                        <div class="o_stat_box">
                            <field name="total_orders" widget="statinfo" icon="fa-cubes" string="Total Orders"/>
                        </div>
                        <!-- Stat box for Total Stock -->
                        <div class="o_stat_box">
                            <field name="total_stock" widget="statinfo" icon="fa-cubes" string="Total Stock"/>
                        </div>
                        <!-- Stat box for Total Supplies -->
                        <div class="o_stat_box">
                            <field name="total_supplies" widget="statinfo" icon="fa-cubes" string="Total Supplies"/>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
